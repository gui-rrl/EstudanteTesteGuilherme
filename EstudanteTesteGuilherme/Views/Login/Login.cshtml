@page
@model EstudanteTesteGuilherme.Views.Login.LoginModel
@{
}

<form asp-controller="Login" asp-action="Logar" method="post"></form>
<div class="content" >
    <div id="login margemLogin">
        <form method="post" action="">
            <h1>Login</h1>
            <p>
                <label for="email">Seu E-mail</label>
                <input id="nome_login" name="email" required="required" type="text" placeholder="E-mail" />
            </p>

            <p>
                <label for="senha">Sua senha</label>
                <input id="email_login" name="senha" required="required" type="password" placeholder="Senha" />
            </p>

            <p>
                <input type="checkbox" name="manterlogado" id="manterlogado" value="" />
                <label for="manterlogado">Manter logado</label>
            </p>

            <p>
                <input type="submit" value="Enviar" />
            </p>

            <p id="margemLogin">
                Ainda não tem conta?
                <a id="semSub2" href="">Cadastre-se</a>
            </p>
        </form>
    </div>
</div>
